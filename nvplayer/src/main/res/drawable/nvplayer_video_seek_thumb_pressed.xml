<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:gravity="center"
            android:height="80dp"
            android:width="80dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
             <gradient
                    android:type="radial"
                    android:gradientRadius="30dp"
                    android:startColor="#85007AFF"
                    android:centerColor="#28007AFF"
                    android:endColor="#00007AFF"/>

        </shape>
    </item>

    <item
            android:gravity="center"
            android:height="16dp"
            android:width="12dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="#ffffffff"/>
            <corners
                    android:radius="3dp"/>
        </shape>
    </item>
</layer-list>