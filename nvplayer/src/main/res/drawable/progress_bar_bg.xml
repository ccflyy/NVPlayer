<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/nvplayer_darkWhite"
                android:startColor="@color/nvplayer_darkWhite" />
        </shape>
    </item>
    <!-- 第二进度条样式，用不怎么到直接设置成了和背景色一样的颜色，隐藏起来 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dp" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/nvplayer_white"
                    android:startColor="@color/nvplayer_white" />
            </shape>
        </clip>
    </item>
    <!-- 第一进度条样式，我想修改的，修改成简单的灰色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- 圆角设置 -->
                <corners android:radius="50dp" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/nvpalyer_iosBlue"
                    android:startColor="@color/nvpalyer_iosBlue" />
            </shape>
        </clip>
    </item>
</layer-list>
