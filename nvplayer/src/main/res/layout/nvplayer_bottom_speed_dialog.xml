<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/nvPlayerColorRightDialogBg"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_gravity="center_vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/nvpalyer_bottom_menu_rg_speed"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:textSize="16sp"
                android:id="@+id/nvpalyer_bottom_menu_rb_speed_2_0"
                android:paddingTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:button="@null"
                android:textColor="@color/nvplayer_color_radio_menu_item_bg"
                android:text="2.0X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:textSize="16sp"
                android:id="@+id/nvpalyer_bottom_menu_rb_speed_1_5"
                android:paddingTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:button="@null"
                android:textColor="@color/nvplayer_color_radio_menu_item_bg"
                android:text="1.5X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:textSize="16sp"
                android:id="@+id/nvpalyer_bottom_menu_rb_speed_1_25"
                android:paddingTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:button="@null"
                android:textColor="@color/nvplayer_color_radio_menu_item_bg"
                android:text="1.25X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:textSize="16sp"
                android:id="@+id/nvpalyer_bottom_menu_rb_speed_1"
                android:paddingTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:button="@null"
                android:textColor="@color/nvplayer_color_radio_menu_item_bg"
                android:text="1.0X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:textSize="16sp"
                android:id="@+id/nvpalyer_bottom_menu_rb_speed_0_75"
                android:paddingTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:button="@null"
                android:textColor="@color/nvplayer_color_radio_menu_item_bg"
                android:text="0.75X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:textSize="16sp"
                android:id="@+id/nvpalyer_bottom_menu_rb_speed_0_5"
                android:paddingTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:button="@null"
                android:textColor="@color/nvplayer_color_radio_menu_item_bg"
                android:text="0.5X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:textSize="16sp"
                android:id="@+id/nvpalyer_bottom_menu_rb_speed_0_25"
                android:paddingTop="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:button="@null"
                android:textColor="@color/nvplayer_color_radio_menu_item_bg"
                android:text="0.25X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>
    </ScrollView>

</RelativeLayout>