<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nvplayer_transparent"
    android:gravity="center"
    android:clickable="false"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/nvplayer_item_cling_search_device_cv_device_item"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#616161"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/nvplayer_item_cling_search_device_iv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_nvplayer_cling_search_device"
                app:tint="#FFF" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nvplayer_item_cling_search_device_tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/nvplayer_transparent"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="客厅的小米电视"
                android:textColor="#FFF" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</LinearLayout>