<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/nvplayer_shape_episode_bg"
    android:foreground="?android:selectableItemBackground"
    android:minHeight="40dp">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/nvplayer_episode_item_episode_rb_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="50dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="第一集"
        android:textColor="@color/nvplayer_color_radio_episode_bg"
        android:textSize="13sp" />

    <CheckBox
        android:id="@+id/nvplayer_episode_item_episode_cb_download_tag"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="2dp"
        android:background="@drawable/nvplayer_select_episode_download_cb_tag"
        android:button="@null"
        android:checked="true"
        android:clickable="false"
        android:visibility="gone" />
</RelativeLayout>