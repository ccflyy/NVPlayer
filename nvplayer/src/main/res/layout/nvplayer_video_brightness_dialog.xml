<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/app_video_brightness_box"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/content"
            android:layout_width="90dp"
            android:layout_height="160dp" >

        <RelativeLayout
                android:layout_centerInParent="true"
                android:id="@+id/content_2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="#00000000">

            <ProgressBar
                    android:id="@+id/nvPlayer_brightness_progressbar"
                    style="@style/nvPlayer_video_vertical_progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:max="100"/>

            <ImageView
                    android:id="@+id/nvPlayer_brightness_iv_icon"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/nvPlayerColorWhite"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_nvplayer_brightness"/>
        </RelativeLayout>

        <TextView
                android:visibility="gone"
                android:id="@+id/app_video_brightness"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="50%"
                android:textColor="@android:color/white"
                android:textSize="16dp" />
    </RelativeLayout>
</RelativeLayout>

</LinearLayout>