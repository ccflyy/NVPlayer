<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:gravity="center">

        <RelativeLayout
                android:id="@+id/content"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="#00000000">

            <ProgressBar
                    android:id="@+id/nvPlayer_volume_progressbar"
                    style="@style/nvPlayer_video_vertical_progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:max="100"/>

            <ImageView
                    android:id="@+id/nvPlayer_volume_iv_icon"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/nvPlayerColorWhite"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_nvplayer_volume_large"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
