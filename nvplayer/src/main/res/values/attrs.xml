<resources>

    <declare-styleable name="BatteryView">
        <attr name="batteryOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="batteryColor" format="color"/>
        <attr name="batteryPower" format="integer"/>
    </declare-styleable>

    <declare-styleable name="NVPlayerVolume">
        <attr name="volumeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="MenuView">
        <attr name="pointRadius" format="dimension|reference"/>
        <attr name="pointColor" format="color|reference"/>
        <attr name="pointPressColor" format="color|reference"/>
    </declare-styleable>

</resources>