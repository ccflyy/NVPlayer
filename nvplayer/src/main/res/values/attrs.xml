<resources>

    <declare-styleable name="NVPlayerBatteryView">
        <attr name="NVPlayerBatteryOrientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="NVPlayerBatteryColor" format="color" />
        <attr name="NVPlayerBatteryPower" format="integer" />
    </declare-styleable>

    <declare-styleable name="NVPlayerVolume">
        <attr name="NVPlayerVolumeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="NVPlayerMenuView">
        <attr name="pointRadius" format="dimension|reference" />
        <attr name="pointColor" format="color|reference" />
        <attr name="pointPressColor" format="color|reference" />
    </declare-styleable>

</resources>